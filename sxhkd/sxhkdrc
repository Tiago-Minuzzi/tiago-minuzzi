# Reload sxhkd config file
super + ctrl + x
    pkill -USR1 -x sxhkd

# Open firefox
super + b
    firefox

super + shift + b
    firefox --private-window

# Open ranger
super + n
    st -e ranger

# Suspend
super + ctrl + shift + s
    systemctl suspend

# Arandr
super + shift + r
    arandr

# htop
super + shift + t
    st -e htop

# Xkill
super + shift + ctrl + k
    xkill

# Scrot selection
super + shift + s
    scrot -s -f -l color=red,width=3

# Clipboard
super + shift + d
    ~/.local/bin/copyToClip

# dwmDisplay
super + ctrl + d
    ~/.local/bin/dwmDisplay

# screen locking
super + shift + l
    dm-tool lock && xset dpms force off

# Zotero
super + shift + z
    zotero

# Volume
XF86AudioLowerVolume
#super + bracketleft
    pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioRaiseVolume
#super + bracketright
    pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioMute
#super + backslash
    pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioStop
    playerctl stop
XF86MonBrightnessUp
    brightnessctl set +5%
XF86MonBrightnessDown
    brightnessctl set 5%-

# Reload sxhkd config file
super + ctrl + x
    pkill -USR1 -x sxhkd

# Open firefox
super + b
    firefox

super + shift + b
    firefox --private-window

# Open ranger
super + n
    konsole -e ranger

# Suspend
super + ctrl + shift + s
    systemctl suspend

# Arandr
super + shift + r
    arandr

# htop
super + shift + t
    konsole -e htop

# Clipboard
super + shift + d
    ~/.local/bin/copyToClip

# Volume
#XF86AudioLowerVolume
super + bracketleft
    pactl set-sink-volume @DEFAULT_SINK@ -5%
#XF86AudioRaiseVolume
super + bracketright
    pactl set-sink-volume @DEFAULT_SINK@ +5%
#XF86AudioMute
super + backslash
    pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioPlay
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioStop
    playerctl stop

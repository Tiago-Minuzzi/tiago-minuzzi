# Reload sxhkd config file
super + ctrl + x
    pkill -USR1 -x sxhkd

# Open firefox
super + b
    firefox

super + shift + b
    firefox --private-window

# Open ranger
super + n
    alacritty -e ranger

# Suspend
super + ctrl + shift + s
    systemctl suspend

# Volume
XF86AudioLowerVolume
    amixer set Master 5%-
XF86AudioRaiseVolume
    amixer set Master 5%+
XF86AudioMute
    amixer set Master toggle
XF86AudioPlay
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioStop
    playerctl stop
